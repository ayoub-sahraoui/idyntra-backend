# API Configuration
APP_NAME="Enhanced ID Verification API"
VERSION="2.0.0"
DEBUG=false

# Server Configuration
HOST="0.0.0.0"
PORT=8000
WORKERS=4

# Security Settings
# CORS and Host Validation (comma-separated lists)
ALLOWED_ORIGINS=https://app.yourdomain.com,https://api.yourdomain.com
ALLOWED_HOSTS=api.yourdomain.com,localhost

# Rate Limiting
MAX_REQUESTS_PER_MINUTE=60

# API Authentication (comma-separated list)
VALID_API_KEYS=your-secure-api-key-1,your-secure-api-key-2

# Security Headers
ENABLE_SECURITY_HEADERS=true
CSP_POLICY="default-src 'self'; img-src 'self' data:; script-src 'self'"
HSTS_MAX_AGE=31536000

# Hardware Configuration
CPU_ONLY=true
CUDA_VISIBLE_DEVICES=0

# File Upload Limits
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes

# Verification Thresholds
LIVENESS_SCORE_MIN=0.65
LIVENESS_SCORE_HIGH=0.80
BLUR_THRESHOLD=100.0
FACE_MATCH_CONFIDENCE_MIN=70.0
FACE_MATCH_CONFIDENCE_HIGH=85.0
FACE_MATCH_TOLERANCE=0.5
AUTHENTICITY_SCORE_MIN=60.0
AUTHENTICITY_SCORE_HIGH=75.0
DEEPFAKE_CONFIDENCE_MIN=0.70
IMAGE_QUALITY_MIN=60.0

# Model Configuration
DEEPFAKE_MODEL_NAME=dima806/deepfake_vs_real_image_detection
TESSDATA_PREFIX=/usr/share/tesseract-ocr/4/tessdata

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/app/logs/idv_api.log
LOG_MAX_BYTES=5242880  # 5MB
LOG_BACKUP_COUNT=3

# Request Timeouts
REQUEST_TIMEOUT=30